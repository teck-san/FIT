{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total COVID-19 Cases per 1 Million People in 2020",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/teck-san/FIT3179/main/javascript/worldmap.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available for ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/teck-san/FIT3179/main/javascript/worldmap.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/teck-san/FIT3179/main/data/worldometer_data.csv"
            },
            "key": "Country/Region",
            "fields": ["Tot Cases/1M pop"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "title": "Total Cases per 1M Population",
          "field": "Tot Cases/1M pop",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100, 1000, 10000, 100000],
            "range": ["#99CCFF", "#3399FF", "#0000FF", " #000099","#000033"]  
          }

        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Tot Cases/1M pop", "type": "quantitative" ,"title": "Total Cases per 1M Population"}
        ]
      }
    }
  ]
  
}
